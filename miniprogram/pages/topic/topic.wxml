<!--pages/topic/topic.wxml-->
<view class="topic-container">
	<!-- 题目框 -->
	<view class="topic-box">
		<icon-self src="../../images/icons/wenhao.png" />
		<view class="topic_title">{{current.title}}</view>
	</view>
	<!-- 答案框 -->
	<view class="topic-ans">
		<view class="choose-item" wx:for="ansItems">
			<icon-self src="../../images/icons/choose.png" />
			<view class="ans-title">{{item.title}}</view>
			<icon-self src="../../images/icons/yes.png" />
			<icon-self src="../../images/icons/err.png" />
		</view>

	</view>
	<!-- 状态栏控制 -->
	<view class="program-control">
		<view class="op-item" wx:for="ops">
			<icon-self src="{{item.src}}" />
			<view class="op-title">{{item.title}}</view>
		</view>
	</view>
</view>