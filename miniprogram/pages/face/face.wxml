<!--pages/face/face.wxml-->
<view class="face-container">
    <!-- 展示题库，点击后刷新下部分 -->
    <view class="face-head">
        <view class="choose-list">请选择你的题库</view>
        <view class="tiku-face-list">
            <view class="face-head-item">
                <text>web前端</text>
                <view class="choose-info">
                    <view>总计143道</view>
                    <button size="mini" type="primary">选择</button>
                </view>
            </view>
            <view class="face-head-item">
                <text>Java后端</text>
                <view class="choose-info">
                    <view>总计43道</view>
                    <button size="mini" type="primary">选择</button>
                </view>
            </view>
            <view class="face-head-item">
                <text>C++后端</text>
                <view class="choose-info">
                    <view>总计13道</view>
                    <button size="mini" type="primary">选择</button>
                </view>
            </view>
            
        </view> 
    </view>
    <!-- 显示当前题库分类和对应题目，点击题目可以跳转到查看题目的界面 -->
    <view class="face-body">
        <show-list />
    </view>
</view>