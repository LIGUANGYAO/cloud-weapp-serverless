/* pages/search/search.wxss */
.search-container{
    display: flex;
    flex-direction: column;
    width: 100%;
}
.search-input{
    margin:0rpx;
    background-color: #ffffff;
    width: 100%;
}
.search-hold{
    margin: 15rpx 30rpx;
    background-color: #f5f5f5;
    border-radius: 4rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
}
.search-box{
    padding: 10rpx;
    width: 70%;
}
.search-icon{
    padding: 10rpx;
    width:7%;
}
.search-button{
    width: 15%;
}